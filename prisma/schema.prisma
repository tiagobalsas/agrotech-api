generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Modelo para armazenamento de dados do Índice Kp
model KpIndex {
  id        String   @id @default(uuid())
  timestamp DateTime
  value     Float
  source    String   // GFZ, NOAA, etc.
  type      String   // Kp, Hp30, Hp60
  
  @@unique([timestamp, type])
}

// Modelo para formulário de contato
model Contact {
  id        String   @id @default(uuid())
  name      String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
  status    String   @default("pending") // pending, read, responded
}

// Modelo para assuntos pré-definidos do formulário
model ContactSubject {
  id    String @id @default(uuid())
  title String @unique
}

